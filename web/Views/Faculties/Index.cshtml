@model ReflectionIT.Mvc.Paging.PagingList<IIT360_Web.Models.Faculty>
@using ReflectionIT.Mvc.Paging
@addTagHelper *, ReflectionIT.Mvc.Paging

@{
    ViewData["Title"] = "Faculty";
}

<h1>Faculty</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<nav aria-label="faculty">
    <vc:pager paging-list="@Model"></vc:pager>
</nav>

<table class="table table-dark table-hover" id="fac">

    <thead>

        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Designation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Qualification)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Links)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AboutMe)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teachings)
            </th>
           
            <th></th>
        </tr>

    </thead>

    <tbody>

        @foreach (var item in Model)
        {
            <tr class="table-dark table-hover">
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Designation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Qualification)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Links)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AboutMe)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Teachings)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.FacultyId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.FacultyId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.FacultyId">Delete</a>
                </td>
            </tr>
        }
    </tbody>

</table>
<nav area-label="faculty">
    @await this.Component.InvokeAsync("Pager", new { pagingList = this.Model })
</nav>

@section Scripts{

    <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js" type="text/javascript"></script>
    <script>
        $(document).ready(function () {
            $("#fac").floatingScroll();
        })
    </script>

}